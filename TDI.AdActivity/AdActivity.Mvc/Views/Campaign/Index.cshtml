@model AdActivity.Application.ViewModels.CampaignViewModel

    <partial name="~/Views/Shared/_subHeader.cshtml" />

    <div class="content animate-panel">
        <div class="row">
            <div class="col-lg-12">
                <div class="hpanel hblue">
                    <div class="panel-heading hbuilt">
                        <div class="pull-right">
                            <a asp-controller="Campaign" asp-action="CreateCampaign" class="btn btn-outline btn-success btn-xs"><i class="pe-7s-plus"></i> Add New Campaign</a>
                            @*<a class="btn btn-default btn-xs">Action 2</a>*@
                        </div>
                        Campaigns
                    </div>
                    <div class="panel-body">
                        <div class="table-responsive">
                            <table cellpadding="1" cellspacing="1" class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th>Campaign Name</th>
                                        <th>Description</th>
                                        <th>Brand</th>
                                        <th>Funding Type</th>
                                        <th>Status</th>
                                        <th>Is Placeholder</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var campaign in Model.Campaigns)
                                    {
                                        <tr>
                                            <td>@campaign.CAMName</td>
                                            <td>@campaign.CAMDesc</td>
                                            <td>@campaign.Brand.BRNType</td>
                                            <td>@campaign.FundingType.Description</td>
                                            <td>@(campaign.ActiveStatus=="A"?"Active":"Inactive")</td>
                                            <td>@(campaign.IsPlaceholder?"Yes":"No")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                    </div>
                    <div class="panel-footer">
                        Campaigns - @Model.Campaigns.Count() rows
                    </div>
                </div>
            </div>
        </div>
    </div>