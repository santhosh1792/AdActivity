@model AdActivity.Application.ViewModels.CampaignViewModel

<div class="row">
    <div class="col-lg-12">
        <div class="hpanel">
            <div class="panel-heading">
                <div class="panel-tools">
                    <a class="showhide"><i class="fa fa-chevron-up"></i></a>
                    <a class="closebox"><i class="fa fa-times"></i></a>
                </div>
                Campaigns
            </div>
            <div class="panel-body">
                <div class="table-responsive">
                    <table cellpadding="1" cellspacing="1" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Campaign Name</th>
                                <th>Description</th>
                                <th>Brand</th>
                                <th>Funding Type</th>
                                <th>Status</th>
                                <th>Is Placeholder</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var campaign in Model.Campaigns)
                            {
                                <tr>
                                    <td>@campaign.CAMName</td>
                                    <td>@campaign.CAMDesc</td>
                                    <td>@campaign.Brand.BRNType</td>
                                    <td>@campaign.FundingType.Description</td>
                                    <td>@(campaign.ActiveStatus=="A"?"Active":"In Active")</td>
                                    <td>@campaign.IsPlaceholder</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

            </div>
            <div class="panel-footer">
                Campaigns - @Model.Campaigns.Count() rows
            </div>
        </div>
    </div>
</div>